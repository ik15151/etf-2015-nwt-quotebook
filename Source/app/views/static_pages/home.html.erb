<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section class="quote_form">
        <%= render 'shared/quote_form' %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3>Quote Feed</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>
  <div class="center jumbotron">
    <h1>Welcome to the Quotebook</h1>

    <h2>
      This is the home page for the
      <a href="https://qbook.herokuapp.com/">Quotebook</a> application.
    </h2>

    <%= link_to "Sign up", signup_path, class: "btn btn-lg btn-primary" %>
  </div>
<% end %>
