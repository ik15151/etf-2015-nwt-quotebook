<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section class="quote_form">
        <%= render 'shared/quote_form' %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3>Quote Feed</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>
  <div class="center jumbotron">
    <h1>Welcome to the Quotebook</h1>

    <h2>
      This is the home page for the <%= link_to "Quotebook",   root_path %> application.
    </h2>

    <%= link_to "Sign up!", signup_path, class: "btn btn-lg btn-primary" %>
  </div>

  <%= link_to image_tag("logo1.png", alt: "Quotebook logo 1"),
		            'http://qbook.herokuapp.com/' %>
		            
  <%= link_to image_tag("logo2.png", alt: "Quotebook logo 2"),
		            'http://qbook.herokuapp.com/' %>
<% end %>